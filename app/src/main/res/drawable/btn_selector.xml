<!-- res/drawable/button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dp" /> <!-- Adjust the radius as needed -->
            <gradient
                android:startColor="#008080"
            android:endColor="#98FB98"
            android:type="linear"
            android:angle="90"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <corners android:radius="13dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="#008080" /> <!-- Lime Green -->
        </shape>
    </item>
</selector>
